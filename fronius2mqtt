def current_data_sensorcard(device):
    data = extract_request_data()
    if not 'Body' in data:
        return "Empty"
    topic_base = "{}/{}/current_data_sensorcard".format(daemon_args.mqtt_topic, device)
# TODO not yet implemented
    return "OK"


